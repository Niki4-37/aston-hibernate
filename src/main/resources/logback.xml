<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 1) Путь к файлу лога -->
    <property name="LOG_FILE" value="./logs/aston-hibernate.log"/>

    <!-- 2) Формат строки лога -->
    <conversionRule conversionWord="clr"
                    converterClass="ch.qos.logback.classic.pattern.ColorConverter"/>
    <conversionRule conversionWord="wex"
                    converterClass="ch.qos.logback.core.pattern.color.WhiteSpaceExcluder"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
